{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "SKIP_CANVAS": "1",
    "CANVAS_SKIP_INSTALLATION": "1",
    "npm_config_canvas_skip_installation": "1"
  },
  "build": {
    "env": {
      "SKIP_CANVAS": "1",
      "CANVAS_SKIP_INSTALLATION": "1",
      "npm_config_canvas_skip_installation": "1"
    }
  }
}
