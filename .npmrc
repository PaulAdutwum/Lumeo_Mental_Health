# Don't install optional dependencies
ignore-optional=true

# Skip canvas-specific installations
canvas_binary_host_mirror=https://registry.npmjs.org/canvas/-/canvas-0.0.0.tgz

# Disable binary downloads that require compilation
canvas_skip_installation=1
node-pre-gyp_binary_host_mirror=https://registry.npmjs.org/

# General settings
legacy-peer-deps=true
shamefully-hoist=true 